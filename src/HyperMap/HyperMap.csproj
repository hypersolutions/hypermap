<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>HyperMap</PackageId>
        <Version>1.0.0</Version>
        <Authors>Hyperbolc Solutions</Authors>
        <Company>Hyperbolc Solutions</Company>
        <Title>Hyperbolic Mapping Framework</Title>
        <PackageProjectUrl>https://github.com/hypersolutions/hypermap</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/hypersolutions/hypermap/blob/master/LICENSE</PackageLicenseUrl>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <Description>Object mapping framework utilising the Roslyn compiler</Description>
        <Copyright>Hyperbolic Solutions 2019</Copyright>
        <PackageTags>Automapping Roslyn</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.2.1" />
    </ItemGroup>
    
</Project>
